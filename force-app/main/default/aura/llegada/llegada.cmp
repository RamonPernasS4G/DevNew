<aura:component implements="force:lightningQuickAction,force:hasRecordId">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-box">
        <p><lightning:formattedText value="Estás a mas de X metros de distancia de la dirección. ¿Éstas seguro de aceptar?"/></p>
    </div>
    <br></br>
    <lightning:button variant="Destructive" label="Cancelar" title="Cancelar"/>
    <lightning:button variant="brand" label="Aceptar" title="Aceptar"/>
</aura:component>